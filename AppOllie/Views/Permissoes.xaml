<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppOllie.Views.Permissoes"
             BackgroundColor="#DFB78B"
             Title="Permissoes">

    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout>

                <Frame.Background>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color= "#FFD2AF"
                                      Offset="1.0" />
                        <GradientStop Color="White"
                                      Offset="0.50" />
                    </LinearGradientBrush>
                </Frame.Background>

                <Image Source="perfil.png"
                       WidthRequest="30"
                       HeightRequest="30"/>

                <Label Text="Permissões"
                       TextColor="#E78A0F"
                       FontAttributes="Bold"
                       Padding="30"
                       HorizontalTextAlignment="Center"
                       FontSize="30"/>

                <Frame BackgroundColor="#FFDECE" BorderColor="#E25822" Padding="20" CornerRadius="15"
                       HeightRequest="300"
                       WidthRequest="300">
                    <StackLayout Spacing="10">

                        <StackLayout>
                            <Label Text="A criança brincou / se exercitou?" />
                            <Label Text="10 Pontos" 
                                   FontAttributes="Bold"/>
                            <StackLayout RadioButtonGroup.GroupName="resposta"
                                         Orientation="Horizontal" >
                                <RadioButton Value="SIM">
                                    <RadioButton.Content>
                                        <StackLayout>
                                            <Label Text="SIM"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="End" />
                                        </StackLayout>
                                    </RadioButton.Content>
                                </RadioButton>
                                <RadioButton Value="NÃO">
                                    <RadioButton.Content>
                                        <StackLayout>
                                            <Label Text="NÃO"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="End" />
                                        </StackLayout>
                                    </RadioButton.Content>
                                </RadioButton>
                            </StackLayout>
                        </StackLayout>

                        <StackLayout>
                            <Label Text="A criança se alimentou bem?" />
                            <Label Text="10 Pontos" 
                                   FontAttributes="Bold"/>
                            <StackLayout RadioButtonGroup.GroupName="resp"
                                         Orientation="Horizontal">
                                <RadioButton Value="SIM">
                                    <RadioButton.Content>
                                        <StackLayout>
                                            <Label Text="SIM"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="End" />
                                        </StackLayout>
                                    </RadioButton.Content>
                                </RadioButton>
                                <RadioButton Value="NÃO">
                                    <RadioButton.Content>
                                        <StackLayout>
                                            <Label Text="NÃO"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="End" />
                                        </StackLayout>
                                    </RadioButton.Content>
                                </RadioButton>
                            </StackLayout>
                        </StackLayout>

                        <StackLayout>
                            <Label Text="A criança leu algum livro?" />
                            <Label Text="10 Pontos" 
                                   FontAttributes="Bold"/>
                            <StackLayout RadioButtonGroup.GroupName="respos"
                                         Orientation="Horizontal">
                                <RadioButton Value="SIM">
                                    <RadioButton.Content>
                                        <StackLayout>
                                            <Label Text="SIM"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="End" />
                                        </StackLayout>
                                    </RadioButton.Content>
                                </RadioButton>
                                <RadioButton Value="NÃO">
                                    <RadioButton.Content>
                                        <StackLayout>
                                            <Label Text="NÃO"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="End" />
                                        </StackLayout>
                                    </RadioButton.Content>
                                </RadioButton>
                            </StackLayout>
                        </StackLayout>

                    </StackLayout>
                </Frame>

                <Button x:Name="sair_Btn"
                        Text="Sair"
                        WidthRequest="80"
                        HeightRequest="10"
                        Margin="10"
                        FontAttributes="Bold"
                        BackgroundColor="#E78A0F"
                        TextColor="White"
                        Clicked="sair_Btn_Clicked"
                        HorizontalOptions="Fill" />

                <Button x:Name="tempo_Btn"
                        Text="Tempo"
                        WidthRequest="80"
                        HeightRequest="10"
                        Margin="10"
                        FontAttributes="Bold"
                        BackgroundColor="#E78A0F"
                        TextColor="White"
                        Clicked="tempo_Btn_Clicked"
                        HorizontalOptions="Fill" />

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>